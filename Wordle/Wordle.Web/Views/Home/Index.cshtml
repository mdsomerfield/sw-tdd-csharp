@{
    ViewData["Title"] = "Wordle Game";
}

<div class="wordle-game">
    <h1>Wordle</h1>
    
    <div class="game-board">
        @for (int i = 0; i < 6; i++)
        {
            <div class="wordle-row" data-row="@i">
                @for (int j = 0; j < 5; j++)
                {
                    <div class="wordle-cell" data-cell="@j"></div>
                }
            </div>
        }
    </div>
    
    <form class="guess-form" method="post">
        <div class="form-group">
            <input type="text" 
                   id="guess" 
                   name="guess" 
                   class="form-control" 
                   maxlength="5" 
                   pattern="[A-Za-z]{5}" 
                   placeholder="Enter your guess"
                   required />
        </div>
        <button type="submit" class="btn btn-primary">Submit Guess</button>
    </form>
</div>

<style>
    .wordle-game {
        max-width: 500px;
        margin: 0 auto;
        text-align: center;
        padding: 20px;
    }
    
    .game-board {
        margin: 30px 0;
    }
    
    .wordle-row {
        display: flex;
        justify-content: center;
        gap: 5px;
        margin-bottom: 5px;
    }
    
    .wordle-cell {
        width: 60px;
        height: 60px;
        border: 2px solid #d3d6da;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: bold;
        text-transform: uppercase;
    }
    
    .guess-form {
        margin-top: 30px;
    }
    
    .guess-form input {
        text-transform: uppercase;
        text-align: center;
        font-size: 20px;
        width: 320px;
        height: 36px;
        padding: 6px 12px;
        margin: 10px auto;
    }
</style>